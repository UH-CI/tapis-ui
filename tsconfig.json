{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "./types",
      "node_modules/@types"
    ],
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "tapis-app": ["src/tapis-app/src"],
      "tapis-app/*": ["src/tapis-app/src/*"],
      "tapis-ui": ["src/tapis-ui/src"],
      "tapis-ui/*": ["src/tapis-ui/src/*"],
      "tapis-redux": ["src/tapis-redux/src"],
      "tapis-redux/*": ["src/tapis-redux/src/*"],
      "tapis-hooks": ["src/tapis-hooks/src"],
      "tapis-hooks/*": ["src/tapis-hooks/src/*"],
      "tapis-api": ["src/tapis-api/src"],
      "tapis-api/*": ["src/tapis-api/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__"
  ]
}
